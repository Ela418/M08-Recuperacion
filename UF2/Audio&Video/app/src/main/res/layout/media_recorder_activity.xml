<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaRecorderActivity">

    <Button
        android:id="@+id/start_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Comenzar Grabación" />

    <Button
        android:id="@+id/stop_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_record_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Detener y Guardar Grabación"
        android:visibility="gone" />

    <Button
        android:id="@+id/start_video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_record_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Grabar Video" />

    <Button
        android:id="@+id/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_video_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Tu Funcionalidad" />

</RelativeLayout>