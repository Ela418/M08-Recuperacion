<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Start Audio Recording" />

    <Button
        android:id="@+id/stop_record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_record_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Stop Audio Recording"
        android:visibility="gone" />

    <Button
        android:id="@+id/start_video_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stop_record_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Start Video Recording" />

    <Button
        android:id="@+id/custom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_video_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Custom Functionality" />

</RelativeLayout>